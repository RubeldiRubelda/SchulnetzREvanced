{
    "manifest_version": 3,
    "name": "Schulnetz REVANCED",
    "version": "1.0.0",
    "description": "Enhances the Schulnetz experience with additional features and customizations.",
    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "*://schulnetz.lu.ch/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://schulnetz.lu.ch/*"
            ],
            "js": [
                "content/contentScript.js"
            ],
            "css": [
                "content/styles.css"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}